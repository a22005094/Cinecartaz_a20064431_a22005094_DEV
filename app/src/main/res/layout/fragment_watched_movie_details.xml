<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WatchedMovieDetailsFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/lbl_seen_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_seen_date1"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@id/tv_seen_date"
                />

            <TextView
                android:id="@+id/tv_seen_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data de visualização"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_filler1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/tv_seen_date"
                android:gravity="center|center_vertical"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/tv_filler1"
                android:layout_toRightOf="@id/iv_poster"
                />

            <TextView
                android:id="@+id/tv_filler1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/tv_title"
                android:gravity="center|center_vertical"
                />

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_filler1"
                android:layout_margin="10px"
                />

            <TextView
                android:id="@+id/tv_filler1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_title"
                android:layout_toRightOf="@id/iv_poster"
                android:gravity="center|center_vertical"
                />

            <TextView
                android:id="@+id/lbl_launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:text="@string/lbl_launch_date"
                android:textSize="20sp"
                android:layout_toRightOf="@id/iv_poster"
                android:layout_marginLeft="10px"
                />
            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:textSize="20sp"
                android:layout_toRightOf="@id/lbl_launch_date"
                />

            <TextView
                android:id="@+id/tv_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/tv_release_date"
                android:layout_toRightOf="@id/iv_poster"
                android:layout_marginLeft="10px"
                />

            <TextView
                android:id="@+id/tv_storyline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:layout_below="@id/tv_genre"
                android:layout_toRightOf="@id/iv_poster"
                android:minLines="10"
                android:textSize="16sp"
                android:layout_marginLeft="10px"
                />

            <TextView
                android:id="@+id/tv_filler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/iv_poster"
                />

            <TextView
                android:id="@+id/tv_lbl_imdb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_imdb_rating"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_filler2"
                android:layout_toLeftOf="@id/tv_imdb_rating"
                />

            <TextView
                android:id="@+id/tv_imdb_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_filler2"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/iv_poster"
                android:text="9.2/10"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_open_link_imdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_link_visit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autoLink="web"
                android:textColorLink="@color/color_blue"
                android:textColor="@color/color_blue"
                android:layout_below="@id/tv_lbl_imdb_rating"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/tv_filler3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/tv_open_link_imdb"
                />

            <View
                android:id="@+id/v_separator_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/tv_filler3"
                />

            <TextView
                android:id="@+id/tv_filler6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/tv_open_link_imdb"
                />

            <!-- ********** cinema related info ********** -->


            <TextView
                android:id="@+id/tv_lbl_seen_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_filler3"
                android:layout_marginTop="0dp"
                android:text="@string/lbl_seen_at"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lbl_seen_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_seen_date"
                android:textSize="16sp"
                android:layout_below="@id/tv_theatre"
                android:layout_toLeftOf="@id/tv_seen_date2"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_seen_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/02/20023"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_below="@id/tv_theatre"
                android:layout_toRightOf="@id/iv_poster"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                />


            <TextView
                android:id="@+id/tv_theatre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_below="@id/tv_lbl_seen_in"
                />


            <TextView
                android:id="@+id/tv_lbl_experience_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_experience_rating"
                android:layout_below="@id/lbl_seen_in"
                android:layout_toLeftOf="@id/tv_experience_rating"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_experience_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4/10"
                android:gravity="left"
                android:layout_below="@id/lbl_seen_in"
                android:layout_toRightOf="@id/iv_poster"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />



            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tv_experience_rating"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_experience_rating"
                />




            <TextView
                android:id="@+id/tv_filler4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/photoRecyclerView"
                />
            <View
                android:id="@+id/v_separator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/tv_filler4"
                />

            <TextView
                android:id="@+id/tv_filler5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@id/v_separator_2"
                />
            <TextView
                android:id="@+id/lbl_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_obs2"
                android:textSize="16sp"
                android:layout_below="@id/tv_filler5"
                />

            <TextView
                android:id="@+id/tv_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:minLines="3"
                android:layout_below="@id/lbl_obs"
                android:background="@color/gray_shade"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>