<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WatchedMoviesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">


            <!-- Título -->
            <!--
                <TextView
                    android:id="@+id/tv_filter_results_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="@string/lbl_filter_results"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            -->

            <!-- Filtrar por Texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/lbl_movie"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_movie_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:background="@drawable/box_border"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- Filtrar por distância -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_distance_selector"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/lbl_distance_select"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- Btn aplicar filtro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="@string/lbl_apply_filter" />

            </LinearLayout>

            <!-- ORDENAR RESULTADOS -->


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_watched_movies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"

            />


    </LinearLayout>


</FrameLayout>