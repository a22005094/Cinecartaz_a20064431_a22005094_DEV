<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item_watched_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1sp"
    android:background="@color/gray_shade"
    app:layout_scrollEffect="compress">

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:contentDescription="@string/lbl_image_content_description"
        android:padding="5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:layout_toRightOf="@id/iv_poster"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_label_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_movieTitle"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/iv_poster"
        android:text="@string/lbl_info_year"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_movieTitle"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/tv_label_year"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_label_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_year"
        android:layout_marginTop="3sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/iv_poster"
        android:text="@string/lbl_info_genre"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_year"
        android:layout_marginTop="3sp"
        android:layout_toRightOf="@id/tv_label_genre"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_label_rating_imdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_genre"
        android:layout_marginTop="3sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/iv_poster"
        android:text="@string/lbl_info_rating_imdb"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_rating_imdb"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_genre"
        android:layout_marginTop="3sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/tv_label_rating_imdb"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_label_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_rating_imdb"
        android:layout_marginTop="3sp"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/iv_poster"
        android:text="@string/lbl_info_director"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rating_imdb"
        android:layout_marginTop="3sp"
        android:layout_toRightOf="@id/tv_label_director"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>


